   "id": "imports",
   "metadata": {},
   "outputs": [],
   "source": [
    "import pandas as pd\n",
    "import numpy as np\n",
    "import random\n",
    "import re\n",
    "from collections import Counter\n",
    "from textblob import TextBlob"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "generate_dataset",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Generate messy dataset with 100 rows\n",
    "def generate_dataset():\n",
    "    reviews = [\n",
    "        \"Great product, love it!\", \"Terrible quality, broke immediately\", \n",
    "        \"Average performance\", \"Excellent value for money\", \"Poor customer service\",\n",
    "        \"Fast delivery\", \"Slow and buggy software\", \"Amazing features\",\n",
    "        \"Disappointing experience\", \"Highly recommended\"\n",
    "    ]\n",
    "    \n",
    "    data = []\n",
    "    for i in range(1, 101):\n",
    "        # Add missing values (10%)\n",
    "        review_text = \"\" if random.random() < 0.1 else random.choice(reviews)\n",
    "        rating = np.nan if random.random() < 0.1 else random.randint(1, 5)\n",
    "        \n",
    "        # Add typos\n",
    "        if review_text and random.random() < 0.3:\n",
    "            chars = list(review_text)\n",
    "            if len(chars) > 3:\n",
    "                idx = random.randint(0, len(chars)-2)\n",
    "                chars[idx], chars[idx+1] = chars[idx+1], chars[idx]\n",
    "                review_text = ''.join(chars)\n",
    "        \n",
    "        data.append([i, review_text, rating])\n",
    "    \n",
    "    df = pd.DataFrame(data, columns=['Review_ID', 'Review_Text', 'Rating'])\n",
    "    df.to_csv('customer_reviews.csv', index=False)\n",
    "    print(f\"Generated dataset with {len(df)} rows\")\n",
    "    return df\n",
    "\n",
    "df = generate_dataset()\n",
    "print(df.head())"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "clean_data",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Clean the data\n",
    "def clean_data(df):\n",
    "    # Handle missing values\n",
    "    df['Review_Text'] = df['Review_Text'].fillna('No review')\n",
    "    df['Rating'] = df['Rating'].fillna(3)\n",
    "    \n",
    "    # Remove special characters\n",
    "    df['Clean_Text'] = df['Review_Text'].apply(lambda x: re.sub(r'[^a-zA-Z0-9\\s]', '', str(x)))\n",
    "    \n",
    "    print(f\"Cleaned {len(df)} rows\")\n",
    "    return df\n",
    "\n",
    "clean_df = clean_data(df)\n",
    "print(clean_df.head())"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "sentiment_analysis",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Sentiment analysis using TextBlob\n",
    "def analyze_sentiment(text):\n",
    "    polarity = TextBlob(str(text)).sentiment.polarity\n",
    "    if polarity > 0.1: return 'Positive'\n",
    "    elif polarity < -0.1: return 'Negative'\n",
    "    else: return 'Neutral'\n",
    "\n",
    "clean_df['Sentiment'] = clean_df['Clean_Text'].apply(analyze_sentiment)\n",
    "\n",
    "print(\"Sentiment Distribution:\")\n",
    "print(clean_df['Sentiment'].value_counts())"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "top_complaints",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Find top 3 complaints\n",
    "negative_reviews = clean_df[clean_df['Sentiment'] == 'Negative']['Clean_Text']\n",
    "complaint_words = []\n",
    "\n",
    "for review in negative_reviews:\n",
    "    words = str(review).lower().split()\n",
    "    complaint_words.extend([w for w in words if len(w) > 3])\n",
    "\n",
    "top_complaints = Counter(complaint_words).most_common(3)\n",
    "\n",
    "print(\"Top 3 Complaints:\")\n",
    "for i, (word, count) in enumerate(top_complaints, 1):\n",
    "    print(f\"{i}. '{word}' - mentioned {count} times\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "curiosity_twist",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Curiosity Twist: Use VADER sentiment (new library)\n",
    "try:\n",
    "    from vaderSentiment.vaderSentiment import SentimentIntensityAnalyzer\n",
    "    \n",
    "    analyzer = SentimentIntensityAnalyzer()\n",
    "    \n",
    "    def vader_sentiment(text):\n",
    "        score = analyzer.polarity_scores(str(text))['compound']\n",
    "        if score > 0.05: return 'Positive'\n",
    "        elif score < -0.05: return 'Negative'\n",
    "        else: return 'Neutral'\n",
    "    \n",
    "    clean_df['VADER_Sentiment'] = clean_df['Clean_Text'].apply(vader_sentiment)\n",
    "    \n",
    "    print(\"\\nVADER vs TextBlob Comparison:\")\n",
    "    comparison = pd.crosstab(clean_df['Sentiment'], clean_df['VADER_Sentiment'])\n",
    "    print(comparison)\n",
    "    \n",
    "    agreement = (clean_df['Sentiment'] == clean_df['VADER_Sentiment']).mean() * 100\n",
    "    print(f\"\\nAgreement: {agreement:.1f}%\")\n",
    "    \n",
    "except ImportError:\n",
    "    print(\"Installing VADER...\")\n",
    "    import subprocess\n",
    "    subprocess.check_call(['pip', 'install', 'vaderSentiment'])\n",
    "    print(\"Please restart kernel and run this cell again\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "final_results",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Final Results Summary\n",
    "print(\"=== CHALLENGE #1 COMPLETE ===\")\n",
    "print(f\"Total reviews processed: {len(clean_df)}\")\n",
    "print(f\"\\nSentiment breakdown:\")\n",
    "for sentiment, count in clean_df['Sentiment'].value_counts().items():\n",
    "    print(f\"  {sentiment}: {count} ({count/len(clean_df)*100:.1f}%)\")\n",
    "\n",
    "print(f\"\\nTop complaints: {[word for word, _ in top_complaints]}\")\n",
    "\n",
    "# Save final results\n",
    "clean_df.to_csv('final_analysis.csv', index=False)\n",
    "print(\"\\nâœ… Results saved to 'final_analysis.csv'\")"
   ]
